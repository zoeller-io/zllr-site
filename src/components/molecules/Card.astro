---
interface Props {
  title: string;
  summary: string;
}
const { title, summary } = Astro.props;
---
<div class="w-full rounded overflow-hidden shadow-lg border border-gray-200">
  <div class="px-6 py-4">
    <div class="font-heading font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
      <slot />
    </p>
  </div>
</div>
