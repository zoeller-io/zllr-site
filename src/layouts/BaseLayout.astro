---
import Header from '../components/organisms/Header.astro';
import Footer from '../components/organisms/Footer.astro';
import ConsentBanner from '../components/organisms/ConsentBanner.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const {
  title,
  description = 'Innoviter liefert maßgeschneiderte Softwareplattformen wie nachhaltige Softwareanwendungen, digitale Infrastrukturen und Systemarchitekturen und unterstützt Kunden dabei, zukunftsfähige Geschäftsmodelle auf Basis von Software zu schaffen.',
  lang = 'de-DE',
} = Astro.props;

const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang={lang} dir="ltr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <title>{title}</title>
  <script is:inline>
    function getConsent() {
      return JSON.parse(localStorage.getItem('consentSettings') || '{}');
    }

    function saveConsent() {
      var settings = {
        analytics: document.getElementById('consent-analytics').checked,
      };
      localStorage.setItem('consentSettings', JSON.stringify(settings));
      document.getElementById('consent-banner').style.display = 'none';
      applyConsent(settings);
    }

    function resetConsent() {
      localStorage.removeItem('consentSettings');
      location.reload();
    }

    function applyConsent(settings) {
      if (settings.analytics) {
        loadMatomo();
      }
    }

    function loadMatomo() {
      var _paq = window._paq = window._paq || [];

      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//analytics.innv.it/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    }

    // Sofort prüfen (localStorage ist synchron verfügbar)
    var consent = getConsent();
    if (consent.analytics) {
      loadMatomo();
    }

    // Banner erst anzeigen, wenn DOM bereit ist
    window.addEventListener('DOMContentLoaded', function() {
      if (Object.keys(consent).length === 0) {
        document.getElementById('consent-banner').style.display = 'block';
      }
    });
  </script>
</head>
<body>
  <Header currentPath={currentPath} />
  <main>
    <slot />
  </main>
  <Footer currentPath={currentPath} />
  <ConsentBanner />
</body>
</html>
